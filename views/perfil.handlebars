<div class="py-4">
    <h2>Datos del perfil</h2>
    <hr class="w-50" />

    <form id="perfilForm" enctype="application/json" >
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input name='email' class="form-control m-auto" disabled value="{{email}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input name="nombre" class="form-control m-auto" value="{{nombre}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input name="password" type="password" class="form-control m-auto" value="{{password}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita la password</label>
                <input name="password2" type="password" class="form-control m-auto" value="{{password}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>AÃ±os de experiencia</label>
                <input name="anios_experiencia" class="form-control m-auto" value="{{anios_experiencia}}" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input name="especialidad" class="form-control m-auto" value="{{especialidad}}" />
            </div>
        </div>
        <div class="mb-1">
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
        <div class="mb-1">
            <button class="btn btn-danger">Eliminar cuenta</button>
        </div>
    </form>
</div>
